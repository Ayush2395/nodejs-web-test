<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>

  <body>
    <!-- navbar component -->
    <%- include ('./partials/navbar.ejs') %>

    <section class="section blog_section" id="blogs">
      <div class="main">
        <form action="">
          <div class="form_group">
            <label for="title">Title</label>
            <input
              type="text"
              placeholder="Enter the title of blog"
              id="title"
            />
          </div>
          <div class="form_group">
            <label for="snippet">Snippet</label>
            <input type="text" placeholder="Snippet of blog" id="snippet" />
          </div>
          <div class="form_group">
            <label for="textarea_body">Write here</label>
            <textarea
              placeholder="Snippet of blog"
              id="textarea_body"
            ></textarea>
          </div>
          <input type="submit" value="Create blog" />
        </form>
      </div>
    </section>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
